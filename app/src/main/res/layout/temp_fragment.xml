<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonConvertCel"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="154dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="154dp"
        android:text="Convert to Fahrenheit"
        android:textSize="15dp" />
    <Button
        android:id="@+id/buttonConvertFahr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="154dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="230dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="154dp"
        android:textSize="15dp"
        android:text="Convert to Celsius" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="754dp"
        android:layout_marginBottom="54dp"
        android:text="Fahrenheit"
        android:textSize="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="754dp"
        android:layout_marginBottom="54dp"
        android:text="Celsius"
        android:textSize="28dp" />

    <EditText
        android:id="@+id/editCel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="235dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="354dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0" />

    <EditText
        android:id="@+id/editFar"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="75dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0" />

    <TextView
        android:id="@+id/finalCel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="75dp"
        android:ems="10"
        android:text="000"
        android:textSize="36dp"
        android:layout_marginRight="75dp" />
    <TextView
        android:id="@+id/finalFahr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="254dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:text="000"
        android:textSize="36dp"
        android:layout_marginRight="75dp" />

</RelativeLayout>
