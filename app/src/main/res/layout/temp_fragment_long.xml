<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">


    <Button
        android:id="@+id/buttonConvertCel"
        android:layout_width="117dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="550dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="154dp"
        android:text="Convert to Fahrenheit"
        android:textSize="15dp" />
        <Button
            android:id="@+id/buttonConvertFahr"
            android:layout_width="117dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="154dp"
            android:layout_marginTop="195dp"
            android:layout_marginEnd="180dp"
            android:layout_marginRight="154dp"
            android:layout_marginBottom="154dp"
            android:textSize="15dp"
            android:text="Convert to Celsius" />

        <TextView
            android:layout_width="155dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="754dp"
            android:layout_marginBottom="54dp"
            android:text="Fahrenheit"
            android:textSize="28dp" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="54dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="174dp"
            android:layout_marginRight="754dp"
            android:layout_marginBottom="54dp"
            android:text="Celsius"
            android:textSize="28dp" />

        <EditText
            android:id="@+id/editCel"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="23dp"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="4dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0" />

        <EditText
            android:id="@+id/editFar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="75dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text="0"
            android:layout_marginRight="75dp" />

    <TextView
        android:id="@+id/finalCel"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        android:ems="10"
        android:text="000"
        android:textSize="36dp" />

    <TextView
        android:id="@+id/finalFahr"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="454dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="75dp"
        android:ems="10"
        android:text="000"
        android:textSize="36dp" />



</RelativeLayout>